<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_login"
    tools:context=".Fragment.User.InfoAccFragment">

    <ImageView
        android:id="@+id/infoAccF_imv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrow_back_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/infoAccF_imv_back"
        app:layout_constraintLeft_toRightOf="parent"
        android:gravity="center"
        android:text="Thông tin tài khoản"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"/>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:orientation="vertical"-->
<!--        android:layout_height="match_parent"-->
<!--        android:fillViewport="true">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/home_fragment_background">
        
        <TextView
            android:id="@+id/infoAccF_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/infoAccF_edt_usernameLayout"
            android:layout_marginTop="10dp"
            android:text="Tên tài khoản"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/infoAccF_edt_usernameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/loginF_edtUsername_width"
            android:layout_height="@dimen/loginF_edtUsername_height"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_tv_username"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxStrokeColor="@color/blue_icon"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/infoAccF_edt_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/black"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/infoAccF_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_edt_usernameLayout"
            app:layout_constraintLeft_toLeftOf="@+id/infoAccF_edt_usernameLayout"
            android:layout_marginTop="10dp"
            android:text="Họ và tên"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/infoAccF_edt_nameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/loginF_edtUsername_width"
            android:layout_height="@dimen/loginF_edtUsername_height"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_tv_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxStrokeColor="@color/blue_icon"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/infoAccF_edt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/infoAccF_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_edt_nameLayout"
            app:layout_constraintLeft_toLeftOf="@+id/infoAccF_edt_nameLayout"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/infoAccF_edt_phoneLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/loginF_edtUsername_width"
            android:layout_height="@dimen/loginF_edtUsername_height"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_tv_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxStrokeColor="@color/blue_icon"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/infoAccF_edt_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/infoAccF_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_edt_phoneLayout"
            app:layout_constraintLeft_toLeftOf="@+id/infoAccF_edt_phoneLayout"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/infoAccF_edt_addressLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/loginF_edtUsername_width"
            android:layout_height="@dimen/loginF_edtUsername_height"
            app:layout_constraintTop_toBottomOf="@+id/infoAccF_tv_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxStrokeColor="@color/blue_icon"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/infoAccF_edt_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/infoAccF_cardView_save"
            android:layout_width="319dp"
            android:layout_height="@dimen/loginF_btnLogin_height"
            app:layout_constraintTop_toBottomOf="@id/infoAccF_edt_addressLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/blue_login" >
            <TextView
                android:id="@+id/infoAccF_tv_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lưu"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/loginF_btnLogin_textSize"
                android:fontFamily="@font/roboto_medium"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </ScrollView>-->
</androidx.constraintlayout.widget.ConstraintLayout>