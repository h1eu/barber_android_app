<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="150dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/item_hairdress_meeting_background">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardView_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/item_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hairdresser" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_tv_titlePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_cardView_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="4 sai lầm skincare khiến Da dầu càng thêm tệ Ngày hè"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>