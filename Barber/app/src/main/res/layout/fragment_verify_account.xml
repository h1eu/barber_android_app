<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.VerifyAccountFragment">

    <TextView
        android:id="@+id/verifyAccF_tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:text="Xác nhận tài khoản" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/verifyAccF_loading"
        android:layout_width="103dp"
        android:layout_height="107dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/verifyAccF_rs"
        android:layout_width="103dp"
        android:layout_height="107dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="rs.json"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/verifyAccF_tv_rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:text="Đăng ký thành công"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/verifyAccF_cardView_login"
        android:layout_width="@dimen/loginF_btnLogin_width"
        android:layout_height="@dimen/loginF_btnLogin_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="350dp"
        app:cardCornerRadius="@dimen/loginF_btnLogin_radius"
        android:backgroundTint="@color/blue_login"
        android:visibility="invisible">
        <TextView
            android:id="@+id/verifyAccF_tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loginF_login"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/loginF_btnLogin_textSize"
            android:fontFamily="@font/roboto_medium"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>