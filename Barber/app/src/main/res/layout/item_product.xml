<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="180dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/item_hairdress_meeting_background">

    <TextView
        android:id="@+id/item_tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Máy cắt tóc"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardView"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_productPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/item_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hairdresser" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_tv_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:text="139 000 vnd"
        android:textColor="@color/red"
        android:fontFamily="@font/roboto_regular"
        android:textSize="13sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>