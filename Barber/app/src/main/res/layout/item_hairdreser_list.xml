<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="60dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/item_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hairdresser" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:background="@drawable/item_hairdress_meeting_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/item_cardView">

        <TextView
            android:id="@+id/item_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Thông tin thợ cắt tóc"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_tv_hairdresserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item_tv_info"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Tên : Trịnh Đình Hiếu"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_tv_hairdresserAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item_tv_hairdresserName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Tuổi : 22"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_tv_hairdresserHairList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item_tv_hairdresserAge"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Kiểu tóc chính : Kiểu tóc giả cua, side part, bổ luống"
            android:textColor="@color/black"
            android:textSize="13sp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>